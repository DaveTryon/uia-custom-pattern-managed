    </CustomBuild>
    <CustomBuild Include="$(IntDir)Custom.UIAutomationCore.il">
      <Message>Assembling IL</Message>
      <Command>ilasm /dll /output=$(IntDir)Interop.UIAutomationCore.dll $(IntDir)Custom.UIAutomationCore.il</Command>
      <AdditionalInputs>$(IntDir)Custom.UIAutomationCore.il;%(AdditionalInputs)</AdditionalInputs>
      <Outputs>$(IntDir)Interop.UIAutomationCore.dll;%(Outputs)</Outputs>
