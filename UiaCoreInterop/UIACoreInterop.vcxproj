  <ItemGroup>
    <CustomBuild Include="$(WindowsSdkDir)\include\UIAutomationCore.idl">
      <Message>Running midl</Message>
      <Command>midl /nologo /char signed /env $(MidlEnv) /tlb "$(IntDir)UIAutomationCore.tlb" /h "$(IntDir)UIAutomationCore_h.h" "$(WindowsSdkDir)\include\UIAutomationCore.idl"</Command>
